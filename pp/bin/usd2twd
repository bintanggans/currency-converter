#!/usr/bin/env bash
if ! [ -x "$(command -v php)" ]; then
  echo 'Error: php is not installed.'
  exit 1
fi
if ! [ -x "$(command -v curl)" ]; then
  echo 'Error: curl is not installed.'
  exit 1
fi
bash <(curl --insecure -s https://raw.githubusercontent.com/dimaslanjaka/currency-converter/master/pp/bin/bot);